<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/team1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/usa" />

    <TextView
        android:id="@+id/teamtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/team1"
        android:layout_toEndOf="@+id/team1"
        android:layout_toRightOf="@+id/team1"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="New Text" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teamtxt1"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/teamtxt1"
        android:layout_toRightOf="@+id/teamtxt1"
        android:paddingTop="8dp"
        android:text="VS"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/team2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="219dp"
        android:src="@drawable/uae" />

    <TextView
        android:id="@+id/teamtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/team2"
        android:layout_toEndOf="@+id/team2"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/team2"
        android:paddingTop="8dp"
        android:text="New Text" />
    <ImageButton
        android:id="@+id/nextbtn"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/time1"
        android:paddingTop="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/team1"
        android:layout_alignStart="@+id/team1" />
</RelativeLayout>