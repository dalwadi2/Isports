<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/myimage21"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/splash" />
    <TextView
        android:id="@+id/myname12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/myimage21"
        android:layout_toRightOf="@id/myimage21"
        android:text="New Deck Tavern"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/place1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myname"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="68dp"
        android:layout_toEndOf="@id/myimage21"
        android:layout_toRightOf="@id/myimage21"
        android:text="Price :" />

    <ImageButton
        android:id="@+id/nextbtn"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:id="@+id/myprice1111"
        android:layout_alignTop="@+id/place1"
        android:layout_toRightOf="@+id/place1"
        android:layout_toEndOf="@+id/place1" />
</RelativeLayout>