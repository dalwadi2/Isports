<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General Features">
        <SwitchPreference
            android:defaultValue="false"
            android:key="distncekey"
            android:title="Distance (Ranges bar)*" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="oprating"
            android:title="Operating hours" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="airconkey"
            android:title="Air Con" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="drinkkey"
            android:title="Drinks" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Screen Specifications">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_example_list_titles"
            android:entryValues="@array/pref_example_list_values"
            android:key="bigscreenlistkey"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Big Screen" />

    </PreferenceCategory>
    <PreferenceCategory android:title="">

    </PreferenceCategory>
    <SwitchPreference
        android:defaultValue="false"
        android:key="parking"
        android:title="Parking availiblity" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="chldren"
        android:title="Children friendly" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="whlchair"
        android:title="wheelchair friendly" />
</PreferenceScreen>